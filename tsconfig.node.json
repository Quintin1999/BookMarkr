{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,  // Allow default imports for CommonJS modules like Express
    "isolatedModules": true,
    "outDir": "./dist",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "types": ["node", "express"],  // Include 'express' in the types
    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "include": [
    "./backend/**/*.ts",
    "./env.d.ts",
    "./express.d.ts",
    "./routes/**/*.ts",
    "./models/**/*.ts",
    "./vite.config.ts"
  ],
  "exclude": ["node_modules"]
}
