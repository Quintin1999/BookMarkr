{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    "types": ["node"]
  },
  "include": [
    "env.d.ts",
    "express.d.ts",
    "server.ts",
    "app.tsx",
    "routes/**/*.ts", 
    "models/**/*.ts",
    "vite.config.ts",
    "./@types",                // Custom types folder for environment variables
    "./backend/**/*.ts"         // Path to your backend code (update this as needed)
  ]
}
